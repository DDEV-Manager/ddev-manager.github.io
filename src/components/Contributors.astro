---
import type { Contributor } from "../lib/github";

interface Props {
  contributors: Contributor[];
}

const { contributors } = Astro.props;
---

<section id="contributors" class="px-4 py-20">
  <div class="mx-auto max-w-6xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
        Built by the Community
      </h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Thanks to all the contributors who help make DDEV Manager better
      </p>
    </div>

    {contributors.length > 0 ? (
      <div class="mt-12">
        <div class="flex flex-wrap justify-center gap-4">
          {contributors.map((contributor) => (
            <a
              href={contributor.html_url}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative"
              title={`${contributor.login} (${contributor.contributions} contributions)`}
            >
              <img
                src={contributor.avatar_url}
                alt={contributor.login}
                class="h-14 w-14 rounded-full ring-2 ring-transparent transition-all group-hover:ring-primary-500 group-hover:scale-110"
                loading="lazy"
              />
              <span class="absolute -bottom-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-primary-700 text-[10px] font-bold text-white">
                {contributor.contributions > 99 ? '99+' : contributor.contributions}
              </span>
            </a>
          ))}
        </div>
        <p class="mt-8 text-center">
          <a
            href="https://github.com/DDEV-Manager/ddev-manager/graphs/contributors"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-primary-700 underline decoration-primary-700/50 hover:decoration-primary-700 dark:text-primary-400 dark:decoration-primary-400/50 dark:hover:decoration-primary-400"
          >
            View all contributors on GitHub
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </p>
      </div>
    ) : (
      <p class="mt-8 text-center text-gray-500 dark:text-gray-300">
        Contributors will appear here once the project is published.
      </p>
    )}

    <!-- DDEV Credit -->
    <div class="mt-16 rounded-2xl border border-gray-200 bg-gradient-to-r from-primary-50 to-primary-100 p-8 text-center dark:border-gray-700 dark:from-primary-950/50 dark:to-primary-900/30">
      <p class="text-lg text-gray-700 dark:text-gray-300">
        DDEV Manager is built on top of
        <a
          href="https://ddev.com"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold text-primary-700 underline decoration-primary-700/50 hover:decoration-primary-700 dark:text-primary-400 dark:decoration-primary-400/50 dark:hover:decoration-primary-400"
        >
          DDEV
        </a>
        , the open-source local development environment for PHP, Python, and Node.js.
      </p>
      <a
        href="https://ddev.com"
        target="_blank"
        rel="noopener noreferrer"
        class="mt-4 inline-flex items-center gap-2 rounded-lg bg-white px-4 py-2 font-medium text-primary-700 shadow-sm transition-colors hover:bg-gray-50 dark:bg-gray-800 dark:text-primary-400 dark:hover:bg-gray-700"
      >
        Learn more about DDEV
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
