---
interface Props {
  version?: string;
}

const { version } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-50 border-b border-gray-200 bg-white/80 backdrop-blur-sm dark:border-gray-800 dark:bg-gray-950/80">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
    <!-- Logo -->
    <a href={base} class="flex items-center gap-2 sm:gap-3">
      <img src={`${base}images/logo.png`} alt="DDEV Manager" class="h-8 w-8 sm:h-10 sm:w-10" />
      <span class="text-lg font-bold text-gray-900 sm:text-xl dark:text-white">DDEV Manager</span>
      {version && (
        <span class="hidden rounded-full bg-primary-100 px-2 py-0.5 text-xs font-medium text-primary-700 sm:inline dark:bg-primary-900 dark:text-primary-300">
          {version}
        </span>
      )}
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-2 sm:gap-4">
      <!-- Desktop nav links -->
      <a
        href="#features"
        class="hidden text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 sm:block dark:text-gray-300 dark:hover:text-white"
      >
        Features
      </a>
      <a
        href="#downloads"
        class="hidden text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 sm:block dark:text-gray-300 dark:hover:text-white"
      >
        Downloads
      </a>

      <!-- Mobile menu button -->
      <div class="relative sm:hidden">
        <button
          id="mobile-menu-btn"
          class="rounded-lg p-2 text-gray-600 transition-colors hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-800"
          aria-label="Open menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Mobile dropdown menu -->
        <div
          id="mobile-menu"
          class="absolute right-0 top-full mt-2 hidden w-40 rounded-lg border border-gray-200 bg-white py-2 shadow-lg dark:border-gray-700 dark:bg-gray-800"
        >
          <a
            href="#features"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            Features
          </a>
          <a
            href="#downloads"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            Downloads
          </a>
        </div>
      </div>

      <!-- GitHub button - icon only on mobile -->
      <a
        href="https://github.com/DDEV-Manager/ddev-manager"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 rounded-lg bg-gray-900 p-2 text-sm font-medium text-white transition-colors hover:bg-gray-800 sm:px-4 dark:bg-gray-100 dark:text-gray-900 dark:hover:bg-gray-200"
        aria-label="View on GitHub"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="hidden sm:inline">GitHub</span>
      </a>

      <!-- Theme toggle -->
      <button
        onclick="toggleTheme()"
        class="rounded-lg p-2 text-gray-600 transition-colors hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-800"
        aria-label="Toggle theme"
      >
        <!-- Sun icon (shown in dark mode) -->
        <svg class="hidden h-5 w-5 dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg class="block h-5 w-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (menuBtn && menu) {
    menuBtn.addEventListener('click', () => {
      const isOpen = menu.classList.toggle('hidden');
      menuBtn.setAttribute('aria-expanded', String(!isOpen));
    });

    // Close menu when clicking a link
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        menuBtn.setAttribute('aria-expanded', 'false');
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!menuBtn.contains(e.target as Node) && !menu.contains(e.target as Node)) {
        menu.classList.add('hidden');
        menuBtn.setAttribute('aria-expanded', 'false');
      }
    });
  }
</script>
