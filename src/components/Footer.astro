---
const base = import.meta.env.BASE_URL;
---

<footer class="border-t border-gray-200 bg-white px-4 py-12 dark:border-gray-800 dark:bg-gray-950">
  <div class="mx-auto max-w-6xl">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Logo and description -->
      <div class="flex items-center gap-3">
        <img src={`${base}images/logo.png`} alt="DDEV Manager" class="h-8 w-8" />
        <span class="text-lg font-semibold text-gray-900 dark:text-white">DDEV Manager</span>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap items-center justify-center gap-6">
        <a
          href="https://github.com/DDEV-Manager/ddev-manager"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
        >
          GitHub
        </a>
        <a
          href="https://github.com/DDEV-Manager/ddev-manager/issues"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
        >
          Report an Issue
        </a>
        <a
          href="https://github.com/DDEV-Manager/ddev-manager/discussions"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
        >
          Discussions
        </a>
        <a
          href="https://ddev.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
        >
          DDEV.com
        </a>
      </nav>
    </div>

    <!-- Bottom section -->
    <div class="mt-8 flex flex-col items-center justify-between gap-4 border-t border-gray-200 pt-8 text-center md:flex-row md:text-left dark:border-gray-800">
      <p class="text-sm text-gray-500 dark:text-gray-300">
        Released under the
        <a
          href="https://github.com/DDEV-Manager/ddev-manager/blob/main/LICENSE"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-700 underline decoration-primary-700/50 hover:decoration-primary-700 dark:text-primary-400 dark:decoration-primary-400/50 dark:hover:decoration-primary-400"
        >
          MIT License
        </a>
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-300">
        Not affiliated with DDEV Foundation. DDEV is a trademark of the DDEV Foundation.
      </p>
    </div>
  </div>
</footer>
