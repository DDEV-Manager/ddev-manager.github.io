---
import type { PlatformDownloads } from "../lib/github";

interface Props {
  version?: string;
  releaseDate?: string;
  downloads?: PlatformDownloads;
}

const { version, releaseDate, downloads } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class="relative overflow-hidden px-4 py-20 lg:py-32">
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-primary-50 to-transparent dark:from-primary-950/30 dark:to-transparent"></div>

  <div class="mx-auto max-w-6xl">
    <div class="grid items-center gap-12 lg:grid-cols-2">
      <!-- Text content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl dark:text-white">
          Manage DDEV with
          <span class="text-primary-500">ease</span>
        </h1>
        <p class="mt-6 text-lg text-gray-600 dark:text-gray-300">
          A beautiful desktop application for managing your DDEV local development environments.
          Start, stop, and configure projects with a single click.
        </p>

        {version && (
          <div class="mt-4 flex flex-wrap items-center justify-center gap-3 lg:justify-start">
            <span class="inline-flex items-center rounded-full bg-primary-100 px-3 py-1 text-sm font-medium text-primary-700 dark:bg-primary-900/50 dark:text-primary-300">
              Version {version}
            </span>
            {releaseDate && (
              <span class="text-sm text-gray-500 dark:text-gray-300">
                Released {releaseDate}
              </span>
            )}
          </div>
        )}

        <!-- Download buttons -->
        <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row lg:justify-start">
          <a
            href="#downloads"
            class="inline-flex items-center gap-2 rounded-xl bg-primary-700 px-6 py-3 text-lg font-semibold text-white shadow-lg shadow-primary-700/25 transition-all hover:bg-primary-800 hover:shadow-xl hover:shadow-primary-800/30"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Download
          </a>
          <a
            href="https://github.com/DDEV-Manager/ddev-manager"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-xl border border-gray-300 bg-white px-6 py-3 text-lg font-semibold text-gray-700 transition-all hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </div>

        <!-- Platform info (will be populated by JS) -->
        <p id="platform-info" class="mt-4 text-sm text-gray-500 dark:text-gray-300"></p>
      </div>

      <!-- Screenshot slideshow with 3D perspective -->
      <div class="relative hero-perspective">
        <div class="hero-screenshot">
          <div class="relative rounded-xl shadow-2xl ring-1 ring-gray-900/10 dark:ring-white/10" aria-roledescription="carousel" aria-label="Application screenshots">
            {/* Slide 1 — eagerly loaded, light-theme srcset directly on <img> */}
            <div class="hero-slide hero-slide--active" aria-roledescription="slide" aria-label="Screenshot 1 of 6">
              <img
                src={`${base}images/screenshot-1.png`}
                srcset={`${base}images/screenshot-1-sm.webp 696w, ${base}images/screenshot-1-md.webp 1050w, ${base}images/screenshot-1.webp 1392w`}
                sizes="(min-width: 1024px) 50vw, 100vw"
                alt="DDEV Manager screenshot 1"
                width="1392"
                height="1522"
                class="w-full rounded-xl"
                loading="eager"
                decoding="async"
                fetchpriority="high"
              />
            </div>
            {/* Slides 2-6 — deferred via data-* attributes */}
            {[2, 3, 4, 5, 6].map((i) => (
              <div
                class="hero-slide absolute inset-0"
                aria-roledescription="slide"
                aria-label={`Screenshot ${i} of 6`}
                aria-hidden="true"
              >
                <img
                  data-srcset={`${base}images/screenshot-${i}-sm.webp 696w, ${base}images/screenshot-${i}-md.webp 1050w, ${base}images/screenshot-${i}.webp 1392w`}
                  data-sizes="(min-width: 1024px) 50vw, 100vw"
                  alt={`DDEV Manager screenshot ${i}`}
                  width="1392"
                  height="1522"
                  class="w-full rounded-xl"
                  decoding="async"
                />
              </div>
            ))}
          </div>
        </div>
        <!-- Decorative elements -->
        <div class="absolute -bottom-4 -left-4 -z-10 h-72 w-72 rounded-full bg-primary-400/20 blur-3xl"></div>
        <div class="absolute -right-4 -top-4 -z-10 h-72 w-72 rounded-full bg-primary-600/20 blur-3xl"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-perspective {
    perspective: 1000px;
  }

  .hero-screenshot {
    transform-style: preserve-3d;
    animation: float 6s ease-in-out infinite;
  }

  .hero-screenshot > div, .hero-screenshot > div img {
    transition: transform 0.4s ease-out;
  }

  .hero-screenshot:hover > div {
    transform: scale(1.08);
  }

  .hero-screenshot:hover > div img {
    transform: scale(1.08);
  }

  .hero-screenshot:hover {
    animation-play-state: paused;
  }

  @keyframes float {
    0%, 100% {
      transform: rotateX(8deg) rotateY(-8deg) translateY(0);
    }
    50% {
      transform: rotateX(8deg) rotateY(-8deg) translateY(-15px);
    }
  }

  .hero-slide {
    opacity: 0;
    transition: opacity 1s ease-in-out;
    pointer-events: none;
  }

  .hero-slide--active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .hero-screenshot {
      animation: none;
    }

    .hero-slide {
      transition: opacity 0.01s;
    }
  }
</style>

<script>
  // Detect platform and show appropriate message
  const platformInfo = document.getElementById('platform-info');
  if (platformInfo) {
    const ua = navigator.userAgent;
    let platform = '';
    if (ua.includes('Mac')) {
      platform = 'macOS detected';
    } else if (ua.includes('Win')) {
      platform = 'Windows detected';
    } else if (ua.includes('Linux')) {
      platform = 'Linux detected';
    }
    if (platform) {
      platformInfo.textContent = `${platform} - scroll down for your download`;
    }
  }

  // Hero slideshow
  const slides = document.querySelectorAll<HTMLElement>('.hero-slide');
  if (slides.length > 1) {
    let current = 0;
    let timer: ReturnType<typeof setInterval>;
    const screenshotEl = document.querySelector('.hero-screenshot');

    // Swap hero image srcset between light/dark theme variants
    function setHeroTheme(isDark: boolean) {
      document.querySelectorAll<HTMLImageElement>('.hero-slide img').forEach((img) => {
        const srcset = img.srcset || img.dataset.srcset;
        const src = img.src || img.dataset.src;
        if (!srcset && !src) return;
        if (isDark) {
          if (srcset) img.srcset = srcset.replace(/\/screenshot-(\d)/g, '/screenshot-dark-$1');
          if (img.src) img.src = img.src.replace(/\/screenshot-(\d)/g, '/screenshot-dark-$1');
          if (img.dataset.srcset) img.dataset.srcset = img.dataset.srcset.replace(/\/screenshot-(\d)/g, '/screenshot-dark-$1');
        } else {
          if (srcset) img.srcset = srcset.replace(/\/screenshot-dark-(\d)/g, '/screenshot-$1');
          if (img.src) img.src = img.src.replace(/\/screenshot-dark-(\d)/g, '/screenshot-$1');
          if (img.dataset.srcset) img.dataset.srcset = img.dataset.srcset.replace(/\/screenshot-dark-(\d)/g, '/screenshot-$1');
        }
      });
    }

    // On load, sync if dark mode is active
    if (document.documentElement.classList.contains('dark')) setHeroTheme(true);

    // Listen for manual theme toggles
    document.addEventListener('themechange', ((e: CustomEvent) => {
      setHeroTheme(e.detail.dark);
    }) as EventListener);

    // Activate deferred images (slides 2-6) before first transition at 4s
    setTimeout(() => {
      slides.forEach((slide, idx) => {
        if (idx === 0) return;
        slide.querySelectorAll<HTMLImageElement>('img[data-srcset]').forEach((img) => {
          img.srcset = img.dataset.srcset!;
          img.sizes = img.dataset.sizes!;
        });
      });
    }, 1500);

    function advance() {
      const prev = slides[current];
      current = (current + 1) % slides.length;
      const next = slides[current];
      prev.classList.remove('hero-slide--active');
      prev.setAttribute('aria-hidden', 'true');
      next.classList.add('hero-slide--active');
      next.removeAttribute('aria-hidden');
    }

    function start() {
      timer = setInterval(advance, 4000);
    }

    function stop() {
      clearInterval(timer);
    }

    start();

    // Pause on hover (matches float animation pause)
    if (screenshotEl) {
      screenshotEl.addEventListener('mouseenter', stop);
      screenshotEl.addEventListener('mouseleave', start);
    }

    // Pause when tab is hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) stop(); else start();
    });
  }
</script>
